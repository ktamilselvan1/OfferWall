<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/offerWallFragment">

    <fragment
        android:id="@+id/offerWallFragment"
        android:name="com.tamil.offer.ui.offerwall.OfferWallFragment"
        android:label="@string/offer_wall_fragment_label"
        tools:layout="@layout/fragment_offer_wall">

        <action
            android:id="@+id/navigate_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.tamil.offer.ui.settings.SettingsFragment"
        android:label="@string/settings_fragment_label"
        tools:layout="@layout/fragment_settings" />
</navigation>